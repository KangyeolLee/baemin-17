extends layout 

block content 
  header#header
    a(href="/signup/phone")  
      img.img-btn(src="/images/arrow-left.svg", alt="prev-page-button")
    span.header-title 회원가입
    span.complete-btn 완료

  section#signup-detail-page
    form(action="/signup" method="POST")
      .input-wrapper 
        label.email-area 이메일
          .email-check-wrapper
            input.user-email(type="email" name="email" placeholder="예) baemin@woowahan.com")
            p.warning-message 유효한 이메일이 아닙니다!
            if error 
              p.warning-message.server-error-message #{error}
            span.checkmark
            div.validate-btn 중복확인

        label.nickname-area 닉네임 
          input.user-nickname(type="text" name="nickname" placeholder="예) baemin_good")
          p.warning-message 닉네임을 입력하세요!
          span.checkmark
        label.password-area 비밀번호 
          input.user-password(type="password" name="password" placeholder="10자 이상 대문자, 소문자, 숫자, 특수문자 중 2종류 조합")
          p.warning-message 10자 이상 대문자, 소문자, 숫자, 특수문자 중 2종류를 조합해야 합니다!
          span.checkmark
        label.birth-area 생년월일 
          input.user-birth(type="text" placeholder="예) 2000 . 01 . 01")
          p.warning-message 유효한 월과 일을 입력해주세요!
          span.checkmark
  
  script(defer src="/javascripts/signup-detail.js") 