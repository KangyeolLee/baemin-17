extends layout 

block content 
  header#header 
    img.img-btn(src="/images/arrow-left.svg", alt="prev-page-button")
    span.header-title 회원가입
    span.complete-btn 완료

  section#user-details 
    form(action="/")
      .input-wrapper 
        label(for="user-email") 이메일
          .email-check-wrapper
            input#user-email(type="email" placeholder="예) baemin@woowahan.com")
            span.checkmark
            div.validate-btn 중복확인

        label(for="user-nickname") 닉네임 #[input(id="user-nickname" type="text" placeholder="예) baemin_good")]
          span.checkmark
        label(for="user-password") 비밀번호 #[input(id="user-password" type="password" placeholder="10자 이상 대문자, 소문자, 숫자, 특수문자 중 2종류 조합")]
          span.checkmark
        label(for="user-birth") 생년월일 #[input(id="user-birth" type="password" placeholder="예) 2000.01.01")]
          span.checkmark