extends layout

block content
  .main-page
    h1.title My배민
    .banner
      a(href="#")
        img(src='/images/banner.png' alt='배너')
    .user
      if nickname
        .logged-in
          .left
            img.profile(src="/images/profile.png", alt="프로필")
            span 안녕하세요 #{nickname}님!
          .right
            a.logout(href="/logout") 로그아웃
      else
        a(href="/login") 
          .left
            img.profile(src="/images/profile.png", alt="프로필")
            span 로그인해주세요
          img.right.arrow(src="/images/arrow.png", alt="화살표")
    ul.menu-grid
      li
        a(href='#')
          figure
            img(src="/images/point.png", alt="포인트")
          span 포인트
      li
        a(href='#')
          figure
            img(src="/images/coupon.png", alt="쿠폰함")
          span 쿠폰
      li
        a(href='#')
          figure
            img(src="/images/present.png", alt="선물함")
          span 선물함
      li
        a(href='#')
          figure
            img(src="/images/heart.png", alt="찜")
          span 찜
      li
        a(href='#')
          figure
            img(src="/images/order.png", alt="주문내역", style='width: auto; height: 32px;')
          span 주문내역
      li
        a(href='#')
          figure
            img(src="/images/review.png", alt="리뷰관리")
          span 리뷰관리
    .space-divider
    .recycle
      a(href='#') 
        .left
          img(src="/images/sproud.png", alt="일회용품")
          span 일회용품 덜 쓰기, 함께해요!
        img.right.arrow(src="/images/arrow.png", alt="화살표")
    .space-divider
    ul.menu-list
      li
        a(href='#')
          .left
            .title 배민페이 등록
              img.new(src="/images/new.png", alt="new")
            p 배민페이로 결제하면 최대 5.5% 배민포인트가 적립됩니다!
          img.right.arrow(src="/images/arrow.png", alt="화살표")
      li
        a(href='#')
          .left
            .title 가족계정 관리
              img.new(src="/images/new.png", alt="new")
            p 결제수단을 공유해 우리 가족의 끼니를 챙겨주세요.
          img.right.arrow(src="/images/arrow.png", alt="화살표")
      li
        a(href='#')
          .left
            .title 공지사항
          img.right.arrow(src="/images/arrow.png", alt="화살표")
      li
        a(href='#')
          .left
            .title 배민커넥트
          img.right.arrow(src="/images/arrow.png", alt="화살표")
