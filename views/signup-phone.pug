extends layout

block content
  #signup-phone-page
    .header
      button.back(type='button'): img(src='/images/arrow-left.svg', alt='뒤로가기')
      h1 회원가입
      button.next(type='button') 다음
    .content
      label.input-field.cancelable
        .title 휴대전화
        .field
          input(type='text', name='login', placeholder='전화번호를 입력해주세요')
          button.calcel(type='button')
      button.send-number 인증번호 받기
      div.certification-number
        label.input-field.cancelable
          .title 인증번호
          .field
            input(type='text', name='login', placeholder='전화번호를 입력해주세요')
            button.calcel(type='button')
        button.resend-number 인증번호 다시받기
          

    
